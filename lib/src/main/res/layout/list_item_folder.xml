<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageview_folder"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/ic_folder_grey_600_24dp" />

    <LinearLayout
        android:id="@+id/linearlayout_text_item_holder"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/textview_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#4D4D4D"
            android:textSize="16sp"
            tools:text="Folder name" />

        <TextView
            android:id="@+id/textview_dirs_inside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingTop="2dp"
            android:textColor="#B1B1B1"
            android:textSize="14sp"
            tools:text="3 dirs" />
    </LinearLayout>

</LinearLayout>
